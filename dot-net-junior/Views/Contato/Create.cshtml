@model dot_net_junior.Models.ContatoModel

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Contato</h4>
<hr />

<!-------------------------------------------------------------------->
<div class="d-flex justify-content-center">
    <div class="card" style="width: 35rem;">
        <div class="card-body">
            <h5 class="card-title">Contato</h5>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>                 
                
                    <div>
                        <div class="form-check form-check-inline">
                            <input asp-for="Tipo" class="form-check-input" type="radio" name="Tipo" id="RadioCelular" value="Celular">
                            <label class="form-check-label">Celular</label>
                            <span asp-validation-for="Tipo" class="text-danger"></span>

                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="Tipo" class="form-check-input" type="radio" name="Tipo" id="RadioTelefone" value="Telefone">
                            <label class="form-check-label">Telefone</label>
                            <span asp-validation-for="Tipo" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <div class="p-3">
                            <label asp-for="DDD" class="control-label"></label>
                            <input asp-for="DDD" class="form-control" maxlength="3" />
                            <span asp-validation-for="DDD" class="text-danger"></span>
                        </div>
                        <div class="p-3">
                            <label asp-for="NumeroContato" class="control-label"></label>
                        <input asp-for="NumeroContato" class="form-control" maxlength="10" />
                            <span asp-validation-for="NumeroContato" class="text-danger"></span>
                        </div>
                    </div>              

                <div>
                    <input type="submit" value="Finalizar" class="btn btn-primary" />

                    <button type="submit" class="btn btn-primary btn-block" asp-controller="Contato" asp-action="AddContato">Adicionar mais contatos</button>

                    <input type="hidden" value="@ViewBag.UltimoUsuarioId" asp-for="IDcliente" />

                    <!--<a class="btn btn-secondary" asp-controller="Home" asp-action="Index" role="button">Voltar</a>-->
                </div>
                <br />
            </form>
        </div>
    </div>
</div>
<!-------------------------------------------------------------------->

