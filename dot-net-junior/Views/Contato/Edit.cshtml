<!-------------------------------------------------------------------->


<div class="d-flex justify-content-center">
    <div class="card" style="width: 35rem;">
        <div class="card-body">
            <h5 class="card-title">Contato</h5>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <div class="form-check form-check-inline">
                        <input asp-for="Tipo" class="form-check-input" type="radio" name="Tipo" id="RadioCelular" value="Celular">
                        <label class="form-check-label">Celular</label>
                        <span asp-validation-for="Tipo" class="text-danger"></span>

                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="Tipo" class="form-check-input" type="radio" name="Tipo" id="RadioTelefone" value="Telefone">
                        <label class="form-check-label">Telefone</label>
                        <span asp-validation-for="Tipo" class="text-danger"></span>

                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <div class="p-3">
                        <label asp-for="DDD" class="control-label"></label>
                        <input asp-for="DDD" class="form-control" />
                        <span asp-validation-for="DDD" class="text-danger"></span>
                    </div>
                    <div class="p-3">
                        <label asp-for="NumeroContato" class="control-label"></label>
                        <input asp-for="NumeroContato" class="form-control" />
                        <span asp-validation-for="NumeroContato" class="text-danger"></span>
                    </div>
                </div>
                <div>
                    <div class="form-group">
                        <label asp-for="IDcliente" value="@Model.IDcliente" class="control-label"></label>
                        <input asp-for="IDcliente" class="form-control" disabled />
                        <span asp-validation-for="IDcliente" class="text-danger"></span>
                    </div>
                    <input type="submit" value="Editar" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-controller="Cliente" asp-action="Index" role="button">Menu</a>
                </div>
                <br />
            </form>
        </div>
    </div>    
</div>
<!-------------------------------------------------------------------->



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
