@model dot_net_junior.Models.Cliente

@{
    ViewData["Title"] = "Details";
}
<div class="d-flex justify-content-center">

    <h1>Dados - Pessoais</h1>
</div>

<div class="d-flex justify-content-center">   
    <div class="card" style="width: 35rem;">
        <div class="card-body">

            <h4>Cliente</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.CPF_CNPJ)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CPF_CNPJ)
                </dd>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.TipoDocumento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TipoDocumento)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center">
    <div class="card" style="width: 35rem;">
        <div class="card-body">
            <h5 class="card-title">Informações:</h5>
            <div>
                <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" asp-route-id="@Model.ID" role="button">Contato</a>
                <a class="btn btn-secondary" asp-controller="Endereco" asp-action="Details" asp-route-id="@Model.ID" role="button">Endereço</a>
            </div>
        </div>
    </div>
</div>
