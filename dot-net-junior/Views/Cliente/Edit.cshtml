@using Microsoft.EntityFrameworkCore.Metadata.Internal;
@model dot_net_junior.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Cliente</h4>
<hr />

<!--------------------------------------------------------------------------->
<input type="hidden" asp-for="ID" />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="d-flex justify-content-center">
        <div class="card" style="width: 35rem;">
            <div class="card-body">
                <h5 class="card-title"> </h5>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <br />

                <div>
                    <div class="form-check form-check-inline">
                        <input asp-for="TipoDocumento" class="form-check-input" type="radio" name="TipoDocumento" id="RadioCPF" value="CPF">
                        <label class="form-check-label" for="inlineRadioCPF">CPF</label>
                        <span asp-validation-for="TipoDocumento" class="text-danger"></span>

                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="TipoDocumento" class="form-check-input" type="radio" name="TipoDocumento" id="RadioCNPJ" value="CNPJ">
                        <label class="form-check-label" for="inlineRadioCNPJ">CNPJ</label>
                        <span asp-validation-for="TipoDocumento" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CPF_CNPJ" class="control-label"></label>
                    <input asp-for="CPF_CNPJ" class="form-control" maxlength="14" />
                    <span asp-validation-for="CPF_CNPJ" class="text-danger"></span>                   
                    <small id="Observacao" class="form-text text-muted">OBS: Se informar CNPJ seu endereço tem que ser Comercial.</small>
                </div>

                <button type="submit" class="btn btn-primary btn-block">Editar</button>
                <a class="btn btn-secondary btn-block" asp-controller="Cliente" asp-action="Index" role="button">Menu</a>

            </div>
        </div>
    </div>
</form>

<div class="d-flex justify-content-center">
    <div class="card" style="width: 35rem;">
        <div class="card-body">
            <h5 class="card-title">Editar:</h5>
            <div>
                <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" asp-route-id="@Model.ID" role="button">Contato</a>
                <a class="btn btn-secondary" asp-controller="Endereco" asp-action="Edit" asp-route-id="@Model.ID" role="button">Endereço</a>
            </div>
        </div>
    </div>
</div>
<!--------------------------------------------------------------------------->


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
