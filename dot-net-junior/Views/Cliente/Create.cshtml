@model dot_net_junior.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

@if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert">X</button>
            @TempData["MensagemErro"]

        </div>
    }

<h1>Criar</h1>

<h4>Cliente</h4>
<hr />

<!--------------------------------------------------------------------------->

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="d-flex justify-content-center">
        <div class="card" style="width: 35rem;">
            <div class="card-body">
                <h5 class="card-title"> </h5>            
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <br />
                
                <div>
                    <div class="form-check form-check-inline">
                        <input asp-for="TipoDocumento"  class="form-check-input" type="radio" name="TipoDocumento" id="RadioCPF" value="CPF">
                        <label class="form-check-label" for="inlineRadioCPF">CPF</label>
                        <span asp-validation-for="TipoDocumento" class="text-danger"></span>

                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="TipoDocumento" class="form-check-input" type="radio" name="TipoDocumento" id="RadioCNPJ" value="CNPJ">
                        <label class="form-check-label" for="inlineRadioCNPJ">CNPJ</label>
                        <span asp-validation-for="TipoDocumento" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group">
                    <input asp-for="CPF_CNPJ" class="form-control" maxlength="14" />
                    <span asp-validation-for="CPF_CNPJ" class="text-danger"></span>
                    <small id="Observacao" class="form-text text-danger">OBS: Se informar CNPJ seu endereço tem que ser Comercial.</small>
                </div>

                <button type="submit" class="btn btn-primary btn-block">Proximo</button>
                    <a class="btn btn-secondary btn-block" asp-controller="Home" asp-action="Index" role="button">Menu</a>
            </div>
        </div>
    </div> 
</form>


<!--------------------------------------------------------------------------->
