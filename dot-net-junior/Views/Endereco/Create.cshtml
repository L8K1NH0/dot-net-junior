@model dot_net_junior.Models.Endereco

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Endereco</h4>
<hr />

<!-------------------------------------------------------------------------------->

<div class="d-flex justify-content-center">
    <div class="card" style="width: 35rem;">
        <div class="card-body">
            <h5 class="card-title">Endereço</h5>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="d-flex justify-content-center">
                    <div class="card" style="width: 35rem;">
                        <div class="card-body">
                            <div>
                                <div class="form-check form-check-inline">
                                    <input asp-for="TipoEndereco" class="form-check-input" type="radio" name="TipoEndereco" id="RadioResidencial" value="@ViewBag.EnderecoCPF">
                                    <span asp-validation-for="TipoEndereco" class="text-danger"></span>
                                    <label class="form-check-label" for="inlineRadioCPF">@ViewBag.EnderecoCPF</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input asp-for="TipoEndereco" class="form-check-input" type="radio" name="TipoEndereco" id="RadioComercial" value="Comercial">
                                    <span asp-validation-for="TipoEndereco" class="text-danger"></span>
                                    <label class="form-check-label" for="inlineRadioCNPJ">Comercial</label>
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                <label asp-for="Rua" class="control-label"></label>
                                <input asp-for="Rua" class="form-control" />
                                <span asp-validation-for="Rua" class="text-danger"></span>
                            </div>
                            <br />
                            <div>
                                <div class="d-flex justify-content-center">
                                    <div class="p-3">
                                        <label asp-for="Numero" class="control-label"></label>
                                        <input asp-for="Numero" class="form-control" />
                                        <span asp-validation-for="Numero" class="text-danger"></span>
                                    </div>
                                    <div class="p-3">
                                        <label asp-for="CEP" class="control-label"></label>
                                        <input asp-for="CEP" class="form-control" />
                                        <span asp-validation-for="CEP" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Bairro" class="control-label"></label>
                                <input asp-for="Bairro" class="form-control" />
                                <span asp-validation-for="Bairro" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <label asp-for="Cidade" class="control-label"></label>
                                <input asp-for="Cidade" class="form-control" />
                                <span asp-validation-for="Cidade" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Proximo</button>

                            <input type="hidden" value="@ViewBag.UltimoUsuarioId" asp-for="IDcliente" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-------------------------------------------------------------------------------->

